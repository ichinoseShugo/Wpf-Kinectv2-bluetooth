<Window x:Class="Wpf_Kinectv2_bluetooth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Kinectv2_bluetooth"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="640">
    <Grid>
        <CheckBox x:Name="RecordPoints" Content="Points" HorizontalAlignment="Left" Margin="301,523,0,0" VerticalAlignment="Top" Checked="RecordPoints_Checked"/>
        <StackPanel >
            <ToggleButton x:Name="ListenButton" Margin="40,520,500,0" Click="ListenButton_Click" Content="Start Listening"/>
            <TextBlock x:Name="DeviceName" TextWrapping="Wrap" Text="nonDevice"/>
        </StackPanel>
        <Button x:Name="ReadButton" Content="Read" HorizontalAlignment="Left" Margin="141,520,0,0" VerticalAlignment="Top" Width="75" Click="ReadButton_Click"/>
        <Button x:Name="SendButton" Content="Send" HorizontalAlignment="Left" Margin="221,520,0,0" VerticalAlignment="Top" Width="75" Click="SendButton_Click"/>
    </Grid>
</Window>
